	/**
	 *
	 * @param fromTime
	 *            inclusive
	 * @param toTime
	 *            exclusive
	 * @return
	 * @throws IM3Exception 
	 */
	public List<ISymbolInLayer> getNotationSymbolsOrderedWithOnsets(Time fromTime, Time toTime) throws IM3Exception {
		ArrayList<ISymbolInLayer> symbols = new ArrayList<>();
		symbols.addAll(this.ledgerLines.subMap(fromTime, toTime).values());

		for (StaffLayer layer : layers.values()) {
			symbols.addAll(layer.getNotationSymbolsOrderedWithOnsets(fromTime, toTime));
		}

		SymbolsOrderer.sortList(symbols);
		return symbols;
	}

	/**
	 *
	 * @param fromTime
	 *            inclusive
	 * @param toTime
	 *            exclusive
	 * @return
	 */
	public List<ISymbolInLayer> getNotationSymbolsOrdered() {
		ArrayList<ISymbolInLayer> symbols = new ArrayList<>();
		symbols.addAll(this.ledgerLines.values());

		for (StaffLayer layer : layers.values()) {
			symbols.addAll(layer.getSymbols());
		}

		SymbolsOrderer.sortList(symbols);
		return symbols;
	}	
	public void addMark(StaffMark mark) throws IM3Exception {
		this.marks.add(mark);
		backgroundLayer.addSymbol(mark);
	}

	public void addAttachment(Attachment<?> attachment) {
		this.attachments.add(attachment);
	}

	public ArrayList<StaffMark> getMarks() {
		return marks;
	}

	public ArrayList<Attachment<?>> getAttachments() {
		return attachments;
	}

