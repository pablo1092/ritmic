package es.ua.dlsi.im3.core.score.meters;

import es.ua.dlsi.im3.IM3Exception;
import es.ua.dlsi.im3.core.score.Meter;
import es.ua.dlsi.im3.core.score.NotationType;
import es.ua.dlsi.im3.core.score.Staff;

/**
 *
 * @author drizo
 */
public class TimeSignatureCutTime extends TimeSignatureNotationalVariation {

    public TimeSignatureCutTime(NotationType notationType, Meter meter, Staff l) throws IM3Exception {
    		super(notationType, meter,l);
		if (meter.getNumerator() != 2 || meter.getDenominator() != 2) {
		    throw new IM3Exception("The meter must be a 2/2 and it is " + meter.toString());
		}
    }

    public TimeSignatureCutTime(NotationType notationType, Staff l) {
    		super(notationType, new Meter(2,2), l);
    }
    
    @Override
    public String toString() {
    		return "C/";
    }

   }
