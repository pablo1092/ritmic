	@Override
	public int compareTo(Measure b) {
		return number - b.number;
	}

	@Override
	public int hashCode() {
		int hash = 5;
		hash = 59 * hash + this.number;
		return hash;
	}

	@Override
	public boolean equals(Object obj) {
		if (obj == null) {
			return false;
		}
		if (getClass() != obj.getClass()) {
			return false;
		}
		final Measure other = (Measure) obj;
		return this.number == other.number;
	}

